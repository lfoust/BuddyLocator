<UserControl x:Class="BuddyLocator.Views.ProfileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<StackPanel>
		<StackPanel VerticalAlignment="Top" Orientation="Horizontal">
			<Image Source="{Binding UserImage}" Stretch="None" Margin="0,0,8,0" />
			<TextBlock Text="{Binding UserName}" Style="{StaticResource PhoneTextTitle1Style}" />
		</StackPanel>
		<Button x:Name="Logout" IsEnabled="{Binding IsLoading, Converter={StaticResource NegationConverter}}">Logout</Button>
		<Button x:Name="ChangePicture" IsEnabled="{Binding IsLoading, Converter={StaticResource NegationConverter}}">Change Picture</Button>
	</StackPanel>
</UserControl>